<odoo>
  <data>
    <!-- explicit form view definition -->

    <record model="ir.ui.view" id="fidelizacion__clientes.form">
      <field name="name">Fidelizacion_Clientes form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref = "base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr ="//notebook" position="inside">
              <page string="Membresía">
                  <group>
                      <field name="cod_s" string = "Código de Socio"/>
                      <field name="nvl_fid" string = "Nivel de Fidelidad"/>
                  </group>
              </page>
          </xpath>
      </field>
    </record>


           <!-- explicit list view definition -->

    <record model="ir.ui.view" id="fidelizacion__clientes.list">
      <field name="name">fidelizacion__clientes list</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref = "base.view_partner_tree"/>
      <field name="arch" type="xml">
          <xpath expr ="//list/field[@name='phone']" position="before">
              <field name="nvl_fid" string = "Nivel de Fidelidad"/>
          </xpath>
          <xpath expr ="//list/field[@name='nvl_fid']" position="attributes">
              <attribute name="decoration-info">nvl_fid in ('Gold','Premium')</attribute>
          </xpath>
      </field>
    </record>


          <!-- explicit kanban view definition -->

    <record model="ir.ui.view" id="fidelizacion__clientes.kanban">
      <field name="name">fidelizacion__clientes kanban</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref = "base.res_partner_kanban_view"/>
      <field name="arch" type="xml">
          <xpath expr ="//div[@class='mb-1']/field[@name='display_name']" position="after">
              <br/>
              <b><field name="nvl_fid"/></b>
          </xpath>
      </field>
    </record>
